<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:background="@mipmap/huilvhang_bg"
    android:orientation="horizontal"
    android:weightSum="1">
<TextView
    android:id="@+id/currency"
    android:layout_width="43dp"
    android:layout_height="match_parent"
    android:text="美元"
    android:textSize="20px"
    android:gravity="center"
     />
    <TextView
        android:id="@+id/jydanwei"
        android:layout_width="55dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="100"
        android:textSize="20px"
        />
    <TextView
        android:id="@+id/cen_price"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="657.9000"
        android:textSize="20px"
        />
    <TextView
        android:id="@+id/buy_price1"
        android:layout_width="62dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="654.0100"
        android:textSize="20px"
        />
    <TextView
        android:id="@+id/buy_price2"
        android:layout_width="64dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="648.0000"
        android:textSize="20px"
        android:layout_weight="0.88" />
    <TextView
        android:id="@+id/sell_price"
        android:layout_width="56dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="20px"
        android:text="654.0000"
        />
</LinearLayout>
</LinearLayout>