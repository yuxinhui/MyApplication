<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="3dp"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bofang"
        android:layout_margin="10dp"
        android:background="@mipmap/xueyuanzhanwei"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        />
    <TextView
        android:id="@+id/xueyuan_time"
        android:text="2016:06:30"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/bofang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/xueyuan_title"
        android:text="title"
        android:layout_toRightOf="@id/bofang"
        android:layout_alignTop="@id/bofang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/xueyuan_time"
        />
    <TextView
        android:id="@+id/content"
        android:text="content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xueyuan_title"
        android:layout_toRightOf="@id/bofang"
        android:layout_toLeftOf="@id/xueyuan_time"
        />
    <TextView
        android:id="@+id/author"
        android:text="author"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/bofang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</RelativeLayout>