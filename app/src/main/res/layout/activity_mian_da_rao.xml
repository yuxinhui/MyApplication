<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mian_da_rao"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yuxinhui.text.myapplication.IndexBannerClick.MianDaRaoActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f00">
        <ImageView
            android:id="@+id/miandarao_back"
            android:layout_width="15dp"
            android:layout_height="50dp"
            android:src="@mipmap/fanhui"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="通知设置"
            android:textColor="#fff"
            android:textSize="25sp"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@mipmap/personal_banner"
        android:scaleType="fitXY"
        />
    <RelativeLayout
        android:id="@+id/close_msg"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/kaiqi"
            android:scaleType="fitXY"
            />
        <ImageView
            android:id="@+id/iv_close_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/dui"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50dp"
            android:visibility="gone"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/openonnight"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/yejiankaiqi"
            android:scaleType="fitXY"
            />
        <ImageView
            android:id="@+id/iv_openonnight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/dui"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:layout_centerVertical="true"
            android:visibility="gone"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/open_msg"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/guanbi"
            android:scaleType="fitXY"
            />
        <ImageView
            android:id="@+id/iv_open_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/dui"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50dp"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="关闭后手机不会震动与发出提示音。\n如果设置为“只在夜间开启”，则只在22:00到8:00生效"
        android:textSize="16sp"
        android:gravity="center"
        />
</LinearLayout>
