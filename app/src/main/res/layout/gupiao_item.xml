<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/gupiao_item_bg"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <TextView
        android:id="@+id/textView1"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="名称代码"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="80dp"
        android:layout_height="wrap_content" />
    <com.yuxinhui.text.myapplication.IndexBannerClick.GuPiaoPackage.InterceptScrollContainer
        android:id="@+id/scroollContainter"
        android:layout_toRightOf="@id/textView1"
        android:layout_alignParentRight="true"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.yuxinhui.text.myapplication.IndexBannerClick.GuPiaoPackage.MyHScrollView
            android:id="@+id/horizontalScrollView1"
            android:focusable="false"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView2"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="成交额"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/textView3"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="涨跌额"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/textView4"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="涨跌幅"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/textView5"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="卖出"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/textView6"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="成交量"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/textView7"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="昨收"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </com.yuxinhui.text.myapplication.IndexBannerClick.GuPiaoPackage.MyHScrollView>
    </com.yuxinhui.text.myapplication.IndexBannerClick.GuPiaoPackage.InterceptScrollContainer>
</RelativeLayout>