<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/gupiao_item_bg"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <TextView
        android:id="@+id/time_txt"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="时间"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="80dp"
        android:layout_height="wrap_content" />
    <com.yuxinhui.text.myapplication.IndexBannerClick.GuPiaoPackage.InterceptScrollContainer
        android:id="@+id/scroollContainter"
        android:layout_toRightOf="@id/time_txt"
        android:layout_alignParentRight="true"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.yuxinhui.text.myapplication.IndexBannerClick.GuPiaoPackage.MyHScrollView
            android:id="@+id/horizontalScrollView1"
            android:focusable="false"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/mon_txt"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="星期一"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tuse_txt"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="星期二"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/wed_txt"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="星期三"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/thu_txt"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="星期四"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/fin_txt"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="星期五"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </com.yuxinhui.text.myapplication.IndexBannerClick.GuPiaoPackage.MyHScrollView>
    </com.yuxinhui.text.myapplication.IndexBannerClick.GuPiaoPackage.InterceptScrollContainer>
</RelativeLayout>