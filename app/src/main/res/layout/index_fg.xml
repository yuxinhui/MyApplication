<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">
    //title
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@mipmap/daohang">
        <ImageView
            android:id="@+id/jin_image"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:src="@mipmap/whitelogo"/>
        <ImageView
            android:id="@+id/kaihu_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/kaihu"
            android:layout_alignParentRight="true"
            android:layout_marginRight="27dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    //导航banner
    <RelativeLayout
        android:id="@+id/bannerguide_rl"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <android.support.v4.view.ViewPager
            android:id="@+id/main_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>
        <LinearLayout
            android:id="@+id/main_ll_dots"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">

        </LinearLayout>
    </RelativeLayout>
    //点击事件
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
                <ImageView
                    android:id="@+id/zhibo1_image"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="2dp"
                    android:background="@mipmap/zhibo"/>
                <ImageView
                    android:id="@+id/kefu_image"
                    android:layout_toRightOf="@id/zhibo1_image"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/kefu"
                    android:layout_marginLeft="2dp"/>
                <ImageView
                    android:id="@+id/handan_image"
                    android:layout_toRightOf="@id/kefu_image"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/handan"
                    android:layout_marginLeft="2dp"/>
                <ImageView
                    android:id="@+id/gupiao_image"
                    android:layout_toRightOf="@id/handan_image"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/gupiao"
                    android:layout_marginLeft="2dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:id="@+id/laoshi_image"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_marginLeft="2dp"
                android:src="@mipmap/laoshi"/>
            <ImageView
                android:id="@+id/kechengbiao_image"
                android:layout_toRightOf="@id/laoshi_image"
                android:layout_marginLeft="2dp"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@mipmap/kechengbiao"/>
            <ImageView
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/kechengbiao_image"
                android:id="@+id/rili_image"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@mipmap/riliicn"/>
            <ImageView
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/rili_image"
                android:id="@+id/huilv_image"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:src="@mipmap/huilv"/>
        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/kuaixun_image"
        android:background="@mipmap/kuaixun"
        android:layout_width="match_parent"
        android:layout_height="30dp" />
    <WebView
        android:id="@+id/kuaixun_wv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </WebView>
</LinearLayout>